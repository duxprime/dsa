{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",                         
    "module": "commonjs" ,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@lib": ["library"],
      "@algo": ["algorithms"],
      "@sort": ["sorting"]
    }
  },
  "include": [
    "spec/**/*.spec.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}